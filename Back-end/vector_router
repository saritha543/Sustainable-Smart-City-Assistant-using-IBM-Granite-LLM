from fastapi import APIRouter
from pydantic import BaseModel

router = APIRouter()

eco_tip_data = {
    "water": [
        "ğŸ’§ Fix household leaks: A dripping tap can waste over 3,000 liters of water annually.",
        "ğŸš¿ Install low-flow showerheads and taps to reduce water consumption by up to 60%.",
        "ğŸŒ§ï¸ Use rainwater harvesting systems to collect and reuse water for gardening or cleaning."
